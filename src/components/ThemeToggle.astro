<button
  id="theme-toggle"
  class="relative w-14 h-7 rounded-full bg-light-soft dark:bg-dark-soft/50 transition-colors duration-300 border-2 border-light-accent/20 dark:border-dark-accent/20 hover:border-light-accent dark:hover:border-dark-accent"
  aria-label="Toggle theme"
  role="switch"
  aria-checked="false"
>
  <span class="sr-only">Toggle dark mode</span>
  <!-- Track Icons Container -->
  <div class="absolute inset-0 flex justify-between items-center px-[2px]">
    <!-- Sun icon -->
    <svg
      class="w-5 h-5 text-light-text/60 transition-opacity duration-300 dark:opacity-40"
      fill="currentColor"
      viewBox="0 0 20 20"
    >
      <path
        fill-rule="evenodd"
        d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z"
        clip-rule="evenodd"></path>
    </svg>
    <!-- Moon icon -->
    <svg
      class="w-5 h-5 text-light-text/60 dark:text-dark-text/60 transition-opacity duration-300 opacity-60 dark:opacity-100"
      fill="currentColor"
      viewBox="0 0 20 20"
    >
      <path
        d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"
      ></path>
    </svg>
  </div>
  <!-- Toggle Circle -->
  <span
    class="absolute block w-6 h-6 rounded-full bg-white shadow-md transition-transform duration-300 translate-y-[-50%] dark:translate-x-7 dark:bg-dark-accent"
    style="top: 50%;"></span>
</button>

<style>
  #theme-toggle {
    -webkit-tap-highlight-color: transparent;
  }

  #theme-toggle:focus-visible {
    outline: 2px solid var(--light-accent);
    outline-offset: 2px;
  }
</style>

