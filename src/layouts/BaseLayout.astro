---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { ClientRouter } from "astro:transitions";

const { title, description, permalink, current = "" } = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <BaseHead {title} {description} {permalink} />
    <link rel="icon" type="image/png" href="/favicon-96x96.png" sizes="96x96" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="shortcut icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <meta name="apple-mobile-web-app-title" content="Gila Brew Co." />
    <link rel="manifest" href="/site.webmanifest" />
    <ClientRouter />
  </head>
  <body>
    <div class="layout">
      <Header current={current} />
      <main class="flex-1 w-full" transition:animate="slide">
        <slot />
      </main>
      <Footer />
    </div>
  </body>
</html>

<style>
  .layout {
    @apply flex flex-col min-h-screen
           bg-gradient-to-b from-light-base to-light-soft
           dark:from-dark-base dark:to-dark-soft;
  }

  /* Smooth scrolling for anchor links */
  html {
    scroll-behavior: smooth;
    scroll-padding-top: 5rem;
  }

  /* Custom scrollbar */
  ::-webkit-scrollbar {
    @apply w-2;
  }

  ::-webkit-scrollbar-track {
    @apply bg-light-soft dark:bg-dark-soft;
  }

  ::-webkit-scrollbar-thumb {
    @apply bg-light-accent/50 dark:bg-dark-accent/50
           rounded-full
           hover:bg-light-accent dark:hover:bg-dark-accent;
  }

  /* Selection styles */
  ::selection {
    @apply bg-light-accent/20 dark:bg-dark-accent/20;
  }
</style>
