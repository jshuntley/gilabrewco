---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { ClientRouter, fade } from "astro:transitions";

const { title, description, permalink, current = "" } = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <BaseHead {title} {description} {permalink} />
    <link rel="icon" type="image/png" href="/favicon-96x96.png" sizes="96x96" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="shortcut icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <meta name="apple-mobile-web-app-title" content="Gila Brew Co." />
    <link rel="manifest" href="/site.webmanifest" />
    <ClientRouter />
  </head>
  <body>
    <div class="min-h-screen flex flex-col">
      <Header current={current} transition:persist />
      <main
        class="flex-1 w-full mt-[72px]"
        transition:animate={fade({ duration: "0.3s" })}
      >
        <slot />
      </main>
      <Footer transition:persist />
    </div>
  </body>
</html>
